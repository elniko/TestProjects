package ubpartner.logmanagement.commun;


/**
 * Constants class.
 */
public final class Constante {

    /**
     * Empty constructor for the final class.
     *
     */
    private Constante() {
        // Class cannot be Instantiated.
    }

    /**
     * Application name.
     */
    public static final String NOMAPPLICATION = "Log Management";

    /**
     * Application version.
     */
    public static final String VERSIONAPPLICATION = Constante.class.getPackage().getImplementationVersion();//"1.6.12";

    /**
     * Level mode "separate".
     */
    public static final String MODESEPARATE = "separate";

    /**
     * Level mode "threshold".
     */
